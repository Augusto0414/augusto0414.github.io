---
import userImage from "../assets/img/user.png";
import svgWorld from "../assets/svg/earth-americas-solid.svg";
import SocialPhill from "./SocialPhill.astro";
import Email from "../icons/Email.astro";
import Linkedin from "../icons/Linkedin.astro";
import Github from "../icons/Github.astro";
import CV from "../../public/pdf/CV.pdf";
import Download from "../icons/Download.astro";
---

<header>
  <div class="relative w-full flex items-start justify-start h-32 rounded-2xl">
    <img class="w-32 h-32 rounded-2xl object-cover" src={userImage.src} alt="user" />
  </div>
  <div class="mt-4 md:text-left">
    <h2 class="text-4xl font-bold text-white">Augusto R.</h2>
    <div class="space-y-2">
      <p class="text-[#A2ABB8] mt-2">Ingeniero de sistemas</p>
      <div class="flex items-center justify-start md:justify-start">
        <img class="w-4 h-4 mr-2" src={svgWorld.src} alt="world" />
        <p class="text-[#A2ABB8]">Valledupar, Colombia</p>
      </div>
      <span class="text-[#A2ABB8]">augustopelis14@gmail.com</span>
      <nav class="flex justify-self-start md:justify-start space-x-4 mt-4">
        <SocialPhill href="mailto:augustopelis4@gmail.com">
          <Email />
        </SocialPhill>
        <SocialPhill href="https://www.linkedin.com/in/augusto-rafael-ara%C3%BAjo-vega-2643a724b/">
          <Linkedin />
        </SocialPhill>
        <SocialPhill href="https://github.com/Augusto0414">
          <Github />
        </SocialPhill>
        <SocialPhill href={CV} download>
          <Download />
        </SocialPhill>
      </nav>
    </div>
  </div>
</header>
